<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>nib icons</title>
    <link href="../dist/compiled.css" rel="stylesheet">
    <style>

        body {
            font-family: "open sans";
        }

        .hlist {
            margin: 0;
            padding: 0;
        }
        .hlist li {
            display: inline-block;
            margin: 0;
            padding: 10px;
            text-align: center;
        }

        .icon {
            width: 164px;
            height: 48px;
        }

        .icon__image:hover {
            zoom: 150%;
        }

        .icon__class {
            padding-top: 4px;
            color: #444;
            font-size: 12px;
        }

    </style>
    <link href="//fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css">
</head>
<body>

    <h2>Glyphs</h2>

    <ul class="hlist">
    <% Object.keys(glyphs).sort().forEach(function(name) { %>
        <li class="icon">

            <div class="icon__image">
                <i class="<%= className %> <%= className %>--smaller <%= className %>--<%= name %>"></i>
            </div>

            <div class="icon__class">
                <%= className %>--<%= name %>
            </div>

        </li>
    <% }); %>
    </ul>

    <h2>Colors</h2>
    <ul class="hlist">
    <% ['lightgreen', 'darkgreen', 'lightgrey', 'darkgrey', 'white'].forEach(function(suffix) { %>
        <li class="icon">

            <div class="icon__image">
                <i class="<%= className %> <%= className %>--ambulance <%= className %>--small <%= className %>--<%= suffix %>"></i>
            </div>

            <div class="icon__class">
                <%= className %>--<%= suffix %>
            </div>

        </li>
    <% }); %>
    </ul>

    <h2>Sizing</h2>
    <ul class="hlist">
        <% ['smallest', 'small', 'medium', 'large', 'largest'].forEach(function(suffix) { %>
        <li class="icon">

            <div class="icon__image">
                <i class="<%= className %> <%= className %>--ambulance <%= className %>--<%= suffix %>"></i>
            </div>

            <div class="icon__class">
                <%= className %>--<%= suffix %>
            </div>

        </li>
        <% }); %>
    </ul>

    <h2>Rotation</h2>
    <ul class="hlist">
        <li class="icon">

            <div class="icon__image">
                <i class="<%= className %> <%= className %>--ambulance <%= className %>--small <%= className %>--small"></i>
            </div>
        </li>
        <% ['rotate-90', 'rotate-180', 'rotate-270'].forEach(function(suffix) { %>
        <li class="icon">

            <div class="icon__image">
                <i class="<%= className %> <%= className %>--ambulance <%= className %>--small <%= className %>--<%= suffix %>"></i>
            </div>

            <div class="icon__class">
                <%= className %>--<%= suffix %>
            </div>

        </li>
        <% }); %>
    </ul>

    <h2>Spinner</h2>
    <ul class="hlist">
        <li class="icon">

            <div class="icon__image">
                <i class="<%= className %> <%= className %>--ambulance <%= className %>--small <%= className %>--spin"></i>
            </div>

        </li>
    </ul>


    <h2>Offset Descenders</h2>
    <ul class="hlist">
        <li style="text-transform: uppercase; font-size: 16px">
            Here is some uppercase text with no descenders
            <i class="<%= className %> <%= className %>--tick-circle-inverse <%= className %>--offset-descenders"></i>
        </li>
    </ul>

</body>
</html>